<Window x:Class="LeanMagagement.View.vTestConnection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeanMagagement.View"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:LeanMagagement.ViewModel"
        Title="vTestConnection" Height="150" Width="200">
    <Window.DataContext>
        <vm:vmDataConnection />
    </Window.DataContext>
    <Grid>
        <Button Content="Connect" Width="100" Margin="10,10,90,92"
                Command="{Binding ConnectToDatabase}"></Button>
        <Label Content="{Binding ConnectionStatus}" Margin="10,67,31,40"></Label>
    </Grid>
</Window>

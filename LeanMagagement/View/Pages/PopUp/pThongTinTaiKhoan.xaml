<Page x:Class="LeanMagagement.View.Pages.PopUp.pThongTinTaiKhoan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
      xmlns:p ="clr-namespace:LeanMagagement.Properties"
      xmlns:local="clr-namespace:LeanMagagement.View.Pages.PopUp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Thông tin tài khoản"
         dx:ThemeManager.ThemeName="Win11Light">

    <Border CornerRadius="20" Background="Purple" Height="350" Width="300">
        <StackPanel Margin="10">
            <TextBlock Text="Thông tin tài khoản" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <Border Margin="0,10,0,10" BorderBrush="White" Width="80" Height="80" CornerRadius="40" BorderThickness="1">
                
            </Border>
            <Grid Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <TextBlock Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" 
                           Text="{x:Static p:Resources.TenNguoiDung}"/>
                <TextBox Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>
            </Grid>
            <Grid  Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <TextBlock Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" 
                            Text="Email"/>
                <TextBox Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>
            </Grid>
           
            <Grid  Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <TextBlock Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" 
                Text="{x:Static p:Resources.NgaySinh}"/>
                <TextBox Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>
            </Grid>
            <Grid  Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <TextBlock Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" 
                Text="{x:Static p:Resources.DiaChi}"/>
                <TextBox Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>
            </Grid>
            <Grid  Margin="0,5,0,5">
                <Button Content="Cập nhật" Width="100"></Button>
            </Grid>

        </StackPanel>
    </Border>
</Page>
